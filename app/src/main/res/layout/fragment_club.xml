<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/crossfit_banner_01"
        android:orientation="horizontal">


    <TextView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_fitness"
        android:text="@string/incredible_fitness_club"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_margin="6dp"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/btn_food"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Спорт питание"
        android:textSize="14sp"
        android:background="@drawable/circle_bg_fon"
        android:layout_gravity="end"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginTop="94dp">

    </TextView>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_main_frame"
            android:gravity="center"
            android:layout_gravity="start"
            android:layout_marginTop="100dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp">

        </TextView>





    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_announce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_announce">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/text_choose"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:text="выберите абонемент"
                android:textSize="20sp"
                android:background="@drawable/bg_fitness">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-4dp"
                android:visibility="visible"
                android:background="@drawable/bg_main_frame">
                <LinearLayout
                    android:id="@+id/l_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp">
                    <TextView
                        android:id="@+id/pool_1"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:text="  Бассейн время 8:00\n   до11:00 группа дети\n   8-14 лет "
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/zal_1"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Тренажерный зал\n Время 9;30-11;30\n Юношеская групп \n 14-17лет дети "

                        android:textSize="16sp">

                    </TextView>






                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp">
                    <TextView
                        android:id="@+id/pool_2"
                        android:layout_width="160dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:text="      Бассейн\n Время 12;30 до\n 15:30 группа\n        14-17 "
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:id="@+id/zal_2"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:text=" Тренажерный\n зал Время\n 9;30-11;30 \n  Взрослый \n  индивидуальный \n с тренером"

                        android:textSize="16sp">

                    </TextView>






                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp">
                    <TextView
                        android:id="@+id/pool_3"
                        android:layout_width="160dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:text="          Бассейн\n  Время:16:00 до\n 21:30 взрослый\n индивудуальный "
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/zal_3"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Тренажерный зал\n Время 9;30-11;30\n Юношеская групп \n 14-17лет дети "

                        android:textSize="16sp">

                    </TextView>






                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp">
                    <TextView
                        android:id="@+id/pool_4"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:text="  Бассейн время 8:00\n   до11:00 группа дети\n   8-14 лет "
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/zal_4"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Тренажерный зал\n Время 9;30-11;30\n Юношеская групп \n 14-17лет дети "

                        android:textSize="16sp">

                    </TextView>






                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp">
                    <TextView
                        android:id="@+id/pool_5"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:text="  Бассейн время 8:00\n   до11:00 группа дети\n   8-14 лет "
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/zal_5"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:background="@drawable/circle_bg_fon"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Тренажерный зал\n Время 9;30-11;30\n Юношеская групп \n 14-17лет дети "

                        android:textSize="16sp">

                    </TextView>









                </LinearLayout>

                <View
                    android:id="@+id/view_40"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                </View>



            </LinearLayout>

            <TextView
                android:id="@+id/text_treners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тренеры клуба *INCREDIBLE"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="gone">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_treners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:visibility="gone"
                android:orientation="horizontal"
                tools:listitem="@layout/item_trener">

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>








    </ScrollView>









</LinearLayout>